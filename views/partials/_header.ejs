<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!-- Login form -->

    <% if (!userData) { %>

      <a href="/login">
        <button type="button" class="btn btn-outline-light mx-1" style="width: 100px">Login</button>
      </a>
      <a href="/register">
        <button type="button" class="btn btn-primary mx-1" style="width: 100px">Sign Up</button>
      </a>

    <% } else { %>

      <span class="navbar-brand">Welcome, <b><%= userData.email %></b>!</span>

      <form class="form-inline" action="/logout" method="POST">
        <button type="submit" class="btn btn-light" style="width: 80px">Logout</button>
      </form>
    
    <% } %>

  </nav>
</header>