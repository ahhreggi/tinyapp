<header>
  <nav class="navbar navbar-expand-md navbar-light bg-transparent">
    <a class="navbar-brand mb-0 h1" href="/">tinyapp.</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="navbar-brand nav-item nav-link nav-tinyapp-link" href="/urls">my links</a>
        <a class="navbar-brand nav-item nav-link nav-tinyapp-link" href="/urls/new">create</a>
      </div>
    </div>


    <!-- Login form -->

    <% if (!userData) { %>

      <a href="/login">
        <button type="button" class="btn btn-outline-dark mx-1" style="width: 100px">Login</button>
      </a>
      <a href="/register">
        <button type="button" class="btn btn-primary mx-1" style="width: 100px">Sign Up</button>
      </a>

    <% } else { %>

      <span class="navbar-brand">Welcome, <b><%= userData.email %></b>!</span>

      <form class="form-inline" action="/logout" method="POST">
        <button type="submit" class="btn btn-dark" style="width: 100px">Logout</button>
      </form>
    
    <% } %>

  </nav>
</header>