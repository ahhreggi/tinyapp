<header class="disable-select">
  <nav class="navbar navbar-expand-md navbar-light bg-light navbar-tinyapp mb-5">
    <div class="container">
      <a class="navbar-brand navbar-highlight mb-0 h1" href="/">tinyapp.</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <section class="navbar-nav">

          <!-- NAVIGATION LINKS (shown if user is currently logged in) -->
          <% if (userData) { %> 
            <a class="navbar-brand nav-item nav-link <%= currentPage === "/urls" ? "active" : ""%>" href="/urls">my links</a>
            <a class="navbar-brand nav-item nav-link <%= currentPage === "/urls/new" ? "active" : ""%>" href="/urls/new">create</a>
          <% } %> 
          
        </section>
        <section class="navbar-nav ml-auto">

          <% if (!userData) { %>

            <!-- LOGIN/REGISTER (shown if user is currently not logged in) -->
            <a class="navbar-brand nav-item nav-link <%= currentPage === "/login" ? "active" : ""%>" href="/login">login</a>
            <a class="navbar-brand nav-item nav-link <%= currentPage === "/register" ? "active" : ""%>" href="/register">sign up</a>

          <% } else { %>
          
            <!-- LOGOUT (shown if user is currently logged in) -->
            <span class="navbar-brand text-muted mr-2">signed in as:</span><span class="navbar-brand"><%= userData.username %></span>
            <form class="form-inline" action="/logout" method="POST">
              <button type="submit" class="btn btn-outline-dark" style="width: 100px">logout</button>
            </form>
          
          <% } %>

        </section>
      </div>
    </div>
  </nav>
</header>

<div class="container">

<!-- FLASH MESSAGES -->
<!-- Set alert color depending on alert type and display if there is one -->
<% const alertType = alerts["warning"] ? "warning" : alerts["danger"] ? "danger" : alerts["success"] ? "success" : "" %> 
<% if (alerts[alertType]) { %>
  <div class="alert alert-<%= alertType %> tinyapp-alert alert-dismissible fade show" role="alert">
    <%= alerts[alertType] %> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% } %>

</div>