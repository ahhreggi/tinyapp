<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!-- Login form -->

    <% if (!username) { %>
    
      <form class="form-inline" action="/login" method="POST">
          <label for="username"><span class="navbar-brand mr-1">Sign in:</span></label>
          <input class="form-control mx-2" type="text" name="username" placeholder="username" style="width: 150px" required>
          <button type="submit" class="btn btn-outline-light" style="width: 80px">Login</button>
      </form>

    <% } else { %>

      <span class="navbar-brand">Welcome, <b><%= username %></b>!</span>

      <form class="form-inline" action="/logout" method="POST">
        <button type="submit" class="btn btn-light" style="width: 80px">Logout</button>
      </form>
    
    <% } %>

  </nav>
</header>