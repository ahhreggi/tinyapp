<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <!-- TinyApp CSS -->
    <link rel="stylesheet" href="/stylesheets/app.css">
    <title>tinyapp. - my links</title>
  </head>
  <body>

    <%- include("partials/_header.ejs", {userData}) %>

    <main class="container">

      <!-- PAGE TITLE -->
      <h1 class="display-4 mb-4"><%= userData.username %>'s <span class="highlight">links.</span></h1>

      <!-- USER LINKS (shown only if the user has at least 1 link) -->

      <% if (Object.keys(urlDB).length > 0) { %> 

        <p class="lead">here are the links you've created so far:</p>

        <table class="table table-bordered">

          <!-- TABLE HEADER -->
          <thead class="thead">
            <tr>
              <th scope="col">short link</th>
              <th scope="col">reference link</th>
              <th scope="col">visits</th>
              <th scope="col">last modified</th>
              <th scope="col">edit link</th>
              <th scope="col">delete link</th>
            </tr>
          </thead>

          <!-- TABLE CONTENTS (populated using user's links from the database) -->
          <tbody>

            <% for(let shortURL in urlDB) { %>
              
              <tr>
                <td>
                  <a class="tinyapp-table-link" href="/u/<%= shortURL %>" target="_blank"><%= shortURL %></a>
                </td>
                <td>
                  <a class="tinyapp-table-link" href="<%= urlDB[shortURL].longURL %>" target="_blank"><%= urlDB[shortURL].longURL %></a>
                </td>
                <td>
                  <%= urlDB[shortURL].visits %>
                </td>
                <td>
                  <%= urlDB[shortURL].lastModified %> 
                </td>
                <td>
                  <a href="/urls/<%= shortURL %>">
                    <button type="button" class="btn btn-outline-secondary" style="width: 100px">edit</button>
                  </a>
                </td>
                <td>
                  <form method="POST" action="/urls/<%= shortURL %>/delete?_method=DELETE">
                    <button type="submit" class="btn btn-outline-danger" style="width: 100px">delete</button>
                  </form>
                </td>
              </tr>

            <% } %>

          </tbody>
        </table>
      
        <% } else { %>

          <p class="lead">you don't have any links yet, click the button below to get started:</p>
          
        <% } %>

      <!-- BUTTON TO CREATE A NEW LINK -->
      <a href="/urls/new">
        <button type="button" class="btn btn-outline-light mt-2" style="width: 200px">create a new link</button>
      </a>
    
    </main>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>